<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="messaging_msg_template">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest filters-separator="&amp;">${messaging.backend.path}/${novus.messaging.tenant-code}/templates?{filters}&amp;{sorting}&amp;size={limit}&amp;page={page}</rest>
    </list>

    <unique>
        <rest>${messaging.backend.path}/${novus.messaging.tenant-code}/templates/{id}</rest>
    </unique>

    <fields>
        <field id="id" domain="integer" name="Идентификатор">
            <select>id</select>
            <filters>
                <eq filter-id="id">{id}</eq>
            </filters>
        </field>

        <field id="severity.id" domain="string">
            <select mapping="['severity']"/>
            <filters>
                <eq filter-id="severity.id">severity.id={severity.id}</eq>
            </filters>
        </field>
        <field id="severity.name" domain="string">
            <select mapping="['severity.name']"/>
            <sorting>sort=severity,{severity.nameDirection}</sorting>
        </field>

        <field id="alertType.id" domain="string">
            <select mapping="['alertType']"/>
            <filters>
                <eq filter-id="alertType.id">alertType.id={alertType.id}</eq>
            </filters>
        </field>
        <field id="alertType.name" domain="string">
            <select mapping="['alertType.name']"/>
        </field>

        <field id="infoType">
            <select mapping="['channel']"/>
            <filters>
                <eq filter-id="infoType.id">channelId={infoType.id}</eq>
            </filters>
        </field>
        <field id="formationType.id" domain="string">
            <select mapping="['formationType']"/>
            <filters>
                <eq filter-id="formationType.id">formationType.id={formationType.id}</eq>
            </filters>
        </field>
        <field id="formationType.name" domain="string">
            <select mapping="['formationType.name']"/>
        </field>

        <field id="name" domain="string" name="Наименование шаблона">
            <select mapping="['name']"/>
            <filters>
                <eq filter-id="name">name={name}</eq>
            </filters>
        </field>

        <field id="code" domain="string" name="Код шаблона">
            <select mapping="['code']"/>
            <filters>
                <eq filter-id="code">code={code}</eq>
            </filters>
        </field>

        <field id="caption" domain="string">
            <select mapping="['caption']"/>
        </field>

        <field id="text" domain="string">
            <select mapping="['text']"/>
        </field>

        <field id="enabled">
            <select mapping="['enabled']"/>
            <filters>
                <eq filter-id="enabled" domain="string">enabled={enabled}</eq>
            </filters>
        </field>
    </fields>

</query>
