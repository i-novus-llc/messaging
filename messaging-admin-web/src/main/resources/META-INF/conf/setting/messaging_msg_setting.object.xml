<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">

    <operations>
        <operation id="create">
            <invocation>
                <rest method="POST">${messaging.backend.path}/settings</rest>
            </invocation>
            <in>
                <field id="name" mapping="['name']" required="true"/>
                <field id="disabled" mapping="['disabled']" default-value="false"/>
                <field id="component.id" mapping="['component.id']"/>
                <field id="severity.id" mapping="['severity']" required="true"/>
                <field id="alertType.id" mapping="['alertType']" required="true"/>
                <field id="infoType" mapping="['channel']"/>
                <field id="formationType.id" mapping="['formationType']" required="true"/>
                <field id="caption" mapping="['caption']" required="true"/>
                <field id="text" mapping="['text']" required="true"/>
                <field id="code" mapping="['code']" required="true"/>
            </in>
        </operation>
        <operation id="update">
            <invocation>
                <rest method="PUT">${messaging.backend.path}/settings/{id}</rest>
            </invocation>
            <in>
                <field id="id" mapping="['id']"/>
                <field id="name" mapping="['name']" required="true"/>
                <field id="disabled" mapping="['disabled']"/>
                <field id="component.id" mapping="['component.id']"/>
                <field id="severity.id" mapping="['severity']" required="true"/>
                <field id="alertType.id" mapping="['alertType']" required="true"/>
                <field id="infoType" mapping="['channel']"/>
                <field id="formationType.id" mapping="['formationType']" required="true"/>
                <field id="caption" mapping="['caption']" required="true"/>
                <field id="text" mapping="['text']" required="true"/>
                <field id="code" mapping="['code']" required="true"/>
            </in>
        </operation>
        <operation id="delete" confirm="true">
            <invocation>
                <rest method="DELETE">${messaging.backend.path}/settings/{id}</rest>
            </invocation>
            <in>
                <field id="id" mapping="['id']"/>
            </in>
        </operation>
    </operations>

</object>
