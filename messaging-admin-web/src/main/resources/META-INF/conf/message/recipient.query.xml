<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="messaging_message">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest filters-separator="&amp;">${messaging.backend.path}/${novus.messaging.tenant-code}/recipients?{filters}&amp;{sorting}&amp;size={limit}&amp;page={page}</rest>
    </list>

    <fields>
        <field id="id">
            <select mapping="['id']"/>
        </field>

        <field id="name" domain="string" name="Получатель">
            <select mapping="['name']"/>
            <filters>
                <eq filter-id="recipient">name={recipient}</eq>
            </filters>
        </field>

        <field id="messageId" domain="string">
            <select mapping="['messageId']"/>
            <filters>
                <eq filter-id="messageId">messageId={messageId}</eq>
            </filters>
        </field>

        <field id="statusTime" domain="date" name="Время установки статуса">
            <select normalize="T(ru.inovus.messaging.n2o.utils.LocalDateTimeUtils).parseDateToMsk(#this)"
                    mapping="['statusTime']"/>
        </field>

        <field id="status" name="Статус">
            <select mapping="['status.description']"/>
        </field>
    </fields>
</query>
