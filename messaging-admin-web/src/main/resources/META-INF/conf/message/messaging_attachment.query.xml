<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="messaging_user">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest filters-separator="&amp;">${messaging.backend.path}/attachments?{filters}&amp;{sorting}&amp;size={limit}&amp;page={page}</rest>
    </list>

    <fields>
        <field id="id">
            <select/>
        </field>
        <field id="messageId">
            <filters>
                <eq filter-id="messageId">messageId={messageId}</eq>
            </filters>
        </field>
        <field id="fileName">
            <select/>
        </field>
        <field id="shortFileName">
            <select/>
        </field>
    </fields>
</query>