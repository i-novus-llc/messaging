<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="messaging_message">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest filters-separator="&amp;">${messaging.backend.path}/${novus.messaging.tenant-code}/messages?{filters}&amp;{sorting}&amp;size={limit}&amp;page={page}</rest>
    </list>

    <unique>
        <rest>${messaging.backend.path}/${novus.messaging.tenant-code}/messages/{id}</rest>
    </unique>

    <fields>
        <field id="id" domain="string" name="Идентификатор">
            <select mapping="['id']"/>
            <filters>
                <eq filter-id="id">{id}</eq>
            </filters>
        </field>

        <field id="severity.id" domain="string">
            <select mapping="['severity.id']"/>
            <filters>
                <eq filter-id="severity.id">severity={severity.id}</eq>
            </filters>
        </field>
        <field id="severity.name" domain="string">
            <select mapping="['severity.name']"/>
        </field>

        <field id="infoType">
            <select mapping="['channel']"/>
            <filters>
                <eq filter-id="infoType.id">infoType={infoType.id}</eq>
            </filters>
        </field>

        <field id="recipientType.id">
            <select mapping="['recipientType.id']"/>
        </field>
        <field id="recipientType.name">
            <select mapping="['recipientType.name']"/>
        </field>

        <field id="alertType.id">
            <select mapping="['alertType.id']"/>
        </field>
        <field id="alertType.name">
            <select mapping="['alertType.name']"/>
        </field>


        <field id="caption" domain="string">
            <select mapping="['caption']"/>
        </field>

        <field id="text" domain="string">
            <select mapping="['text']"/>
        </field>

        <field id="sentAt" domain="localdatetime">
            <select normalize="T(ru.inovus.messaging.n2o.utils.LocalDateTimeUtils).parseDateToMsk(#this)" mapping="['sentAt']"/>
            <filters>
                <more filter-id="sentAt.begin" domain="localdatetime">sentAtBegin={sentAt.begin}</more>
                <less filter-id="sentAt.end" normalize="#this.plusDays(1).minusNanos(1)"
                      domain="localdatetime">sentAtEnd={sentAt.end}</less>
            </filters>
        </field>

        <field id="sentAtFormatted" domain="date">
            <select normalize="T(ru.inovus.messaging.n2o.utils.LocalDateTimeUtils).parseDateToMsk(#this)" mapping="['sentAt']"/>
        </field>

        <field id="users" domain="object">
            <select mapping="['recipients']"/>
        </field>
    </fields>

</query>
