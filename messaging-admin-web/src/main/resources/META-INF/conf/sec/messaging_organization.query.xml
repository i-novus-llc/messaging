<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="messaging_organization">
    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest filters-separator="&amp;">${messaging.backend.path}/security_provider/organizations?{filters}&amp;{sorting}&amp;size={limit}&amp;page={page}</rest>
    </list>

    <fields>
        <field id="id">
            <select/>
        </field>
        <field id="name" domain="string">
            <select mapping="['fullName']"/>
            <filters>
                <like filter-id="name">name={name}</like>
            </filters>
        </field>
    </fields>
</query>
