<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="messaging_user">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest filters-separator="&amp;">${messaging.backend.path}/recipients?{filters}&amp;{sorting}&amp;size={limit}&amp;page={page}</rest>
    </list>

    <fields>
        <field id="id">
            <select mapping="[username]"/>
        </field>
        <field id="username" domain="string">
            <select mapping="[username]"/>
            <filters>
                <eq filter-id="id">username={username}</eq>
            </filters>
        </field>
        <field id="name" domain="string">
            <select mapping="#this[fio]+ ' (' + #this[username] + ')'"/>
            <filters>
                <like filter-id="name">name={name}</like>
            </filters>
        </field>
        <field id="email">
            <select mapping="[email]"/>
        </field>

    </fields>

</query>
