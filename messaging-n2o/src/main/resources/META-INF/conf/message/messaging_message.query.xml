<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="messaging_message">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest filters-separator="&amp;">${messaging.backend.path}/messages?{filters}</rest>
    </list>

    <unique>
        <rest>${messaging.backend.path}/messages/{id}</rest>
    </unique>

    <fields>
        <field id="id" domain="integer" name="Идентификатор">
            <select/>
            <filters>
                <eq filter-id="id">{id}</eq>
            </filters>
        </field>

        <field id="component.id" domain="integer">
            <select/>
            <filters>
                <eq filter-id="component.id">component.id={component.id}</eq>
            </filters>
        </field>
        <field id="component.name" domain="string">
            <select/>
        </field>

        <field id="severity.id" domain="string">
            <select mapping="['severity']"/>
            <filters>
                <eq filter-id="severity.id">severity.id={severity.id}</eq>
            </filters>
        </field>
        <field id="severity.name" domain="string">
            <select mapping="['severityName']"/>
        </field>
        
        <field id="infoType.id" domain="string">
            <select mapping="['infoType']"/>
            <filters>
                <eq filter-id="infoType.id">infoType.id={infoType.id}</eq>
            </filters>
        </field>
        <field id="infoType.name" domain="string">
            <select mapping="['infoTypeName']"/>
        </field>

        <field id="recipientType.id">
            <select mapping="['recipientType']"/>
        </field>
        <field id="recipientType.name">
            <select mapping="['recipientTypeName']"/>
        </field>

        <field id="caption" domain="string">
            <select/>
        </field>

        <field id="text" domain="string">
            <select/>
        </field>

        <field id="sentAt" domain="localdatetime">
            <select/>
            <sorting/>
            <filters>
                <more filter-id="sentAt.begin" domain="date">sentAt.begin={sentAt.begin}</more>
                <less filter-id="sentAt.end" domain="date">sentAt.end={sentAt.end}</less>
            </filters>
        </field>

        <field id="systemId">
            <select/>
            <filters>
                <eq filter-id="systemId" default-value="default">systemId={systemId}</eq><!--TODO: default-value from context-->
            </filters>
        </field>

        <field id="users*.id" domain="integer[]">
            <select mapping="[recipientIds]"/>
        </field>

        <field id="username" domain="string">
            <filters>
                <eq filter-id="username" default-value="#{username}">user={username}</eq>
            </filters>
        </field>
    </fields>

</query>
