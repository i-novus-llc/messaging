<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-3.0">

    <operations>
        <operation id="update">
            <invocation>
                <rest method="PUT">${messaging.backend.path}/user/{username}/settings/{id}</rest>
            </invocation>
            <in-parameters>
                <param id="id" mapping="id"/>
                <param id="name" mapping="name" required="true"/>
                <param id="disabled" mapping="disabled"/>
                <param id="alertType.id" mapping="alertType" required="true"/>
                <param id="infoType.id" mapping="infoType" required="true"/>
                <param id="username" mapping="username" default-value="#{username!}"/>
            </in-parameters>
        </operation>
    </operations>

</object>
