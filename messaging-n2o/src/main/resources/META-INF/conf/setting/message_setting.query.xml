<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="message_setting">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest filters-separator="&amp;">settings?{filters}</rest>
    </list>

    <fields>
        <field id="id" domain="integer" name="Идентификатор">

        </field>

        <field id="component.id" domain="integer">
            <filters>
                <eq filter-id="component.id">component.id={component.id}</eq>
            </filters>
        </field>
        <field id="component.name" domain="string"/>

        <field id="severity" domain="string">
            <filters>
                <eq filter-id="severity.id">severity.id={severity.id}</eq>
            </filters>
        </field>
        <field id="severityName" domain="string"/>

        <field id="alertType" domain="string">
            <filters>
                <eq filter-id="alertType.id">alertType.id={alertType.id}</eq>
            </filters>
        </field>
        <field id="alertTypeName" domain="string"/>

        <field id="infoType" domain="string">
            <filters>
                <eq filter-id="infoType.id">infoType.id={infoType.id}</eq>
            </filters>
        </field>
        <field id="infoTypeName" domain="string"/>

        <field id="name" domain="string" name="Наименование шаблона">
            <filters>
                <eq filter-id="name">name={name}</eq>
            </filters>
        </field>

        <field id="enabled" domain="string">
            <filters>
                <eq filter-id="enabled.id">enabled.id={enabled.id}</eq>
            </filters>
        </field>
    </fields>

</query>
