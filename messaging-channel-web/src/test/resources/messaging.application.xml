<?xml version='1.0' encoding='UTF-8'?>
<application xmlns="http://n2oapp.net/framework/config/schema/application-3.0">
    <events>
        <stomp-event id="notif" destination="/exchange/tenant/message">
            <alert title="{caption}" text="{text}" color="{severityId}"  timeout="7000"/>
        </stomp-event>
        <stomp-event id="count" destination="/exchange/tenant/message.count">
            <alert title="{caption}" text="{message_count}" color="{severityId}"  timeout="7000"/>
        </stomp-event>
    </events>
</application>
