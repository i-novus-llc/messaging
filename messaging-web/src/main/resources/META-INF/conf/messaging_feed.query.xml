<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="messaging_feed">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <rest filters-separator="&amp;">${messaging.backend.path}/${novus.messaging.tenant-code}/feed/{username}?{filters}&amp;{sorting}&amp;size={limit}&amp;page={page}</rest>
    </list>

    <unique>
        <rest>${messaging.backend.path}/${novus.messaging.tenant-code}/feed/{username}/message/{id}/read</rest>
    </unique>

    <fields>
        <field id="id" domain="string" name="Идентификатор">
            <select/>
            <filters>
                <eq filter-id="id">{id}</eq>
            </filters>
        </field>

        <field id="severity.id" domain="string">
            <select mapping="['severity.id']"/>
            <filters>
                <eq filter-id="severity.id">severity={severity.id}</eq>
            </filters>
        </field>
        <field id="severity.name" domain="string">
            <select mapping="['severity.name']"/>
        </field>

        <field id="caption" domain="string">
            <select/>
        </field>

        <field id="text" domain="string">
            <select/>
        </field>

        <field id="sentAt" domain="localdatetime">
            <select mapping="['sentAt']"/>
            <filters>
                <more filter-id="sentAt.begin"  domain="localdatetime">sentAtBegin={sentAt.begin}</more>
                <less filter-id="sentAt.end" normalize="#this.plusDays(1).minusNanos(1)"  domain="localdatetime">sentAtEnd={sentAt.end}</less>
            </filters>
        </field>

        <field id="sentAtFormatted" domain="date">
            <select mapping="['sentAt']" normalize="new java.text.SimpleDateFormat('dd.MM.yyyy HH:mm:ss').format(#this)"/>
        </field>

        <field id="readAt" domain="date">
            <select/>
        </field>

        <field id="isRead" domain="boolean">
            <select mapping="#this['readAt'] == null ? false : true"/>
        </field>

        <field id="username" domain="string">
            <filters>
                <eq filter-id="username" default-value="#{username}">user={username}</eq>
            </filters>
        </field>
    </fields>

</query>
