<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-3.0">

    <operations>
        <operation id="update">
            <invocation>
                <rest method="PUT">${messaging.backend.path}/user/{username}/settings/{id}</rest>
            </invocation>
            <in-parameters>
                <param id="id"/>
                <param id="name" required="true"/>
                <param id="disabled"/>
                <param id="alertType.id" mapping="['alertType']" required="true"/>
                <param id="infoType"/>
                <param id="username" default-value="#{username!}"/>
            </in-parameters>
        </operation>
    </operations>

</object>
