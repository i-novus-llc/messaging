<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">

    <operations>
        <operation id="update">
            <invocation>
                <rest method="PUT">${messaging.backend.path}/user/{user}/settings/{id}</rest>
            </invocation>
            <in>
                <field id="id" mapping="['id']"/>
                <field id="alertType.id" mapping="['alertType']"/>
                <field id="infoType" mapping="['channel']"/>
                <field id="disabled" mapping="['disabled']"/>
                <field id="user" default-value="#{username!}" mapping="['user']"/>
            </in>
        </operation>
    </operations>

</object>
