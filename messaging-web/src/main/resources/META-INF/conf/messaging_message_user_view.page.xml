<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <form query-id="messaging_feed" id="user_view">
        <fields>
            <row>
                <input-select id="component" label="Компонент" enabled="false"/>
                <input-select id="severity" label="Уровень важности" enabled="false">
                    <options>
                        <option id="SEVERE" name="Важный"/>
                        <option id="ERROR" name="Ошибка"/>
                        <option id="WARNING" name="Предупреждение"/>
                        <option id="INFO" name="Информация"/>
                    </options>
                </input-select>
            </row>
            <row>
                <text-area id="caption" label="Заголовок уведомления" rows="3" enabled="false">
                </text-area>
            </row>
            <row>
                <text-area id="text" label="Текст уведомления" rows="5" enabled="false">
                </text-area>
            </row>
        </fields>
    </form>
</simple-page>
