<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-3.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-3.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>messaging_message</object-id>
    <layout>n2o/layout/single</layout>
    <name>Уведомление</name>

    <regions>
        <region place="single" type="tabs">
            <container id="main">
                <wgt:form customize="js" css-class="messaging-message-form"
                          src="novus/messaging/message.form">
                    <wgt:query-id>messaging_message</wgt:query-id>
                    <fs:field-set field-label-align="left" type="none">
                        <fs:row>
                            <ctrl:output-text id="caption" label="Заголовок"/>
                        </fs:row>
                        <fs:row>
                            <ctrl:text-area id="text" label="Текст"/>
                        </fs:row>
                    </fs:field-set>
                    <wgt:action-menu>
                        <wgt:menu-item id="read" label="Пометить прочтенным">
                            <wgt:event>
                                <wgt:custom src="novus/messaging/mark.read.state"/>
                            </wgt:event>
                            <wgt:conditions>
                                <wgt:visibility-condition>
                                    <wgt:expression>!readAt</wgt:expression>
                                </wgt:visibility-condition>
                            </wgt:conditions>
                        </wgt:menu-item>
                    </wgt:action-menu>
                </wgt:form>
            </container>
        </region>
    </regions>

</page>
